Main();

function Main(){
  let hero = generateHero();
  let victorypoints = generateVictoryPoints();
  let level = victorylevel(victorypoints);
  if (hero.length > 0 && (isNumber(victorypoints) === true) && (level.length > 0)){
  message(hero, victorypoints, level)}
}

//função que verifica se o valor de uma variável é numérico retornando true or false
function isNumber(value) {
      return typeof value === 'number' && !isNaN(value);
    }

function generateHero(){
  //Atribui um nome de herói conforme o array names 
  let names = ["Gigante guerreiro de Aço", 
      "Metamorfose Atômica", "Relâmpago Dourado", "Arqueiro Flamejante","Spartacus Vingador" ,
      "Mística", "Andróide Sônico",
      "Guardião das Almas"]

      let HeroNumber = Math.floor(Math.random() * names.length);
      return  names[HeroNumber]; }

function generateVictoryPoints(){
//Atribui um número de vitórias aleatório variando entre 0 e 110, multiplicado por 2 (vamos dar um ajudinha para o nosso herói)
let victory = (Math.floor(Math.random() * 110) * 2) 
//Atribui um número de derrotas entre 0 e 70 (ninguém é invencível)
let losses = Math.floor(Math.random() * 70)  
//função que retorna o saldo de vitórias
 if(victory > losses){
 return score(victory, losses)}
 else if(victory === losses) {return 0}
 else {return score(losses, victory)}
}

function score(victory, losses) {
  return victory - losses
}

//Atribui um nível conforme o score do herói

function victorylevel(score){
  if (isNumber(score) === true)  {
  if(score < 10) {return "Ferro"}
  else if(score >= 10 && score <= 20) {return "Bronze"}
  else if(score > 20 && score <= 50) {return "Prata"}
  else if(score > 50 && score <= 80) {return "Ouro"}
  else if(score > 80 && score <= 90) {return "Diamante"}
  else if(score > 90 && score <= 100) {return "Lendário"}
  else if(score > 100) {return "Imortal"}
  }
  else {return "Ferro"}
}

function message(hero, victorypoints, level) {
  console.log(`O herói ${hero} tem saldo  ${victorypoints} e pertence ao nível : ${level}`)
}




